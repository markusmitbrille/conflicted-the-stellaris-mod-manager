                    <Button Command="{Binding MoveModTopCommand}">
                        <TextBlock Text="&#11121;"/>
                    </Button>
                    <Button Command="{Binding MoveModUpCommand}" Margin="0 5 0 0">
                        <TextBlock Text="&#11105;"/>
                    </Button>
                    <Button Command="{Binding MoveModDownCommand}" Margin="0 5 0 0">
                        <TextBlock Text="&#11107;"/>
                    </Button>
                    <Button Command="{Binding MoveModBottomCommand}" Margin="0 5 0 0">
                        <TextBlock Text="&#11123;"/>
                    </Button>
                </StackPanel>
                <DataGrid 
                    x:Name="mods"
                    ItemsSource="{Binding Mods}"
                    SelectedItem="{Binding SelectedMod}"
