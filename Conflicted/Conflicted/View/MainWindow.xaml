                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <Grid Margin="20">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" TextTrimming="CharacterEllipsis" Text="{Binding File.Mod.DisplayName}"/>
                                                <TextBlock Grid.Column="1" TextTrimming="CharacterEllipsis" Text=" &#11208; "/>
                                                <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" Text="{Binding File.Directory}"/>
                                                <TextBlock Grid.Column="3" TextTrimming="CharacterEllipsis" Text=" &#11208; "/>
                                                <TextBlock Grid.Column="4" TextTrimming="CharacterEllipsis" Text="{Binding File.Name}"/>
                                                <TextBlock Grid.Column="5" TextTrimming="CharacterEllipsis" Text=" &#11208; "/>
                                                <TextBlock Grid.Column="6" TextTrimming="CharacterEllipsis" Text="{Binding Name}"/>
                                            </Grid>
                                            <TextBlock Grid.Row="1" Margin="0 5 0 0" TextTrimming="CharacterEllipsis" Text="{Binding File.Path}"/>
                                            <Expander Grid.Row="2" Margin="0 5 0 0" MaxHeight="200" Header="Content">
                                                <TextBox
                                                    IsReadOnly="True"
                                                    VerticalScrollBarVisibility="Auto"
                                                    HorizontalScrollBarVisibility="Auto"
                                                    Background="LightGray"
                                                    Text="{Binding Text, Mode=OneWay}"/>
                                            </Expander>
                                        </Grid>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </TabItem>
            </TabControl>
            <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Transparent"/>
        </Grid>
    </DockPanel>
</Window>
